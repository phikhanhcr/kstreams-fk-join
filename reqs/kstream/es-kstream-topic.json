{
  "name": "elasticsearch-sink-connector-topic-hashtags",
  "config": {
    "connector.class": "io.confluent.connect.elasticsearch.ElasticsearchSinkConnector",
    "tasks.max": "1",
    "topics": "cdc_topics-with-topichashtags",
    "connection.url": "http://elasticsearch:9200",
    "key.ignore": "false",
    "auto.create": "false",
    "auto.evolve": "true",
    "insert.mode": "upsert",
    "delete.enabled": "true",
    "behavior.on.null.values": "delete",
    "write.method": "upsert",
    "pk.fields": "_id",
    "pk.mode": "record_value",
    "schema.ignore": "true",
    "type.name": "",
    "transforms": "dropPrefix,ReplaceField",
    "transforms.dropPrefix.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.dropPrefix.regex": "cdc_(.*)",
    "transforms.dropPrefix.replacement": "topics",
    "value.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "transforms.ReplaceField.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.ReplaceField.include": "topic_hashtags"
  }
}